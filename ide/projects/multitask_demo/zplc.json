{
  "$schema": "../../zplc.schema.json",
  "name": "MultiTask Demo",
  "version": "1.0.0",
  "description": "Demonstrates multi-task scheduling with fast and slow tasks",
  "author": "ZPLC Team",
  "target": {
    "board": "rpi_pico",
    "cpu": "rp2040",
    "clock_mhz": 125
  },
  "compiler": {
    "optimization": "size",
    "debug": true
  },
  "io": {
    "inputs": [
      {
        "name": "Button",
        "address": "%I0.0",
        "description": "User button input",
        "pin": 14
      }
    ],
    "outputs": [
      {
        "name": "LED1",
        "address": "%Q0.1",
        "description": "Fast blink LED (external)",
        "pin": 15
      },
      {
        "name": "LED2",
        "address": "%Q0.0",
        "description": "Slow blink LED (onboard)",
        "pin": 25
      }
    ]
  },
  "tasks": [
    {
      "name": "FastTask",
      "trigger": "cyclic",
      "interval_ms": 10,
      "priority": 0,
      "watchdog_ms": 50,
      "programs": [
        "FastBlink.st"
      ]
    },
    {
      "name": "SlowTask",
      "trigger": "cyclic",
      "interval_ms": 100,
      "priority": 2,
      "watchdog_ms": 500,
      "programs": [
        "SlowBlink.st"
      ]
    }
  ],
  "build": {
    "outDir": "build"
  }
}