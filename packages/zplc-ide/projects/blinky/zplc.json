{
  "$schema": "../../zplc.schema.json",
  "name": "Blinky",
  "version": "1.0.0",
  "description": "Simple LED blinker using Ladder Diagram",
  "target": {
    "board": "posix"
  },
  "tasks": [
    {
      "name": "MainTask",
      "trigger": "cyclic",
      "interval_ms": 10,
      "priority": 1,
      "watchdog_ms": 100,
      "programs": [
        "main.ld"
      ]
    }
  ],
  "build": {
    "outDir": "build"
  }
}