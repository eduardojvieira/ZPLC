{
  "$schema": "../../zplc.schema.json",
  "name": "Pico Persistence Test",
  "version": "1.0.0",
  "description": "Tests NVS persistence with multitask scheduling on RPi Pico",
  "author": "ZPLC Team",
  "target": {
    "board": "rpi_pico",
    "cpu": "rp2040",
    "clock_mhz": 125
  },
  "compiler": {
    "optimization": "size",
    "debug": true
  },
  "io": {
    "inputs": [],
    "outputs": [
      {
        "name": "LED_ONBOARD",
        "address": "%Q0.0",
        "type": "BOOL",
        "pin": 25,
        "description": "Onboard LED (GPIO25)"
      }
    ]
  },
  "tasks": [
    {
      "name": "FastCounter",
      "trigger": "cyclic",
      "interval_ms": 10,
      "priority": 0,
      "watchdog_ms": 50,
      "programs": [
        "FastCounter.st"
      ]
    },
    {
      "name": "SlowBlink",
      "trigger": "cyclic",
      "interval_ms": 100,
      "priority": 2,
      "watchdog_ms": 500,
      "programs": [
        "SlowBlink.st"
      ]
    }
  ],
  "build": {
    "outDir": "build"
  }
}